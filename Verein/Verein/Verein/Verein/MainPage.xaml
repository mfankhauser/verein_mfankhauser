<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verein.MainPage">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto" ColumnDefinitions="*,*">
            
            
            
            <!-- row 0 -->
            <Label Margin="20" Padding="10" Text="{Binding Title}" />
            <Button Command="{Binding ChangeTitleCommand}" Grid.Column="1" Text="OK" Margin="20" Padding="10"/>


        </Grid>
    </ContentPage.Content>

</ContentPage>
